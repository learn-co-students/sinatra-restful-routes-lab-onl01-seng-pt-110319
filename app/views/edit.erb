<h1> Edit Your Recipe </h1>
<form method="POST" action="/recipes/<%= @recipe.id %>">
<input type="hidden" name="_method" value="PATCH">
<label for="name">Recipe Name:</label>
<br>
<input type="text" id="name" name="name" value="<%= @recipe.name %>">
<br>
<label for="cook_time">Cook Time:</label>
<br>
<input type="text" id="cook_time" name="cook_time" value="<%= @recipe.cook_time %>">
<br>
<label for="ingredients"> Ingredients:</label>
<br>
<textarea type="text" id="ingrediants" name="ingredients" rows="4" cols="50"><%= @recipe.ingredients %></textarea>
<br>
<input type="submit" value="Submit!">
</form>